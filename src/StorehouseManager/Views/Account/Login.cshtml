@model StorehouseManager.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "Account";
}

<div>
    <h1>Login</h1>
    <form>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName)
            @Html.EditorFor(m => m.UserName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.EditorFor(m => m.Password,additionalViewData: new {@class="form-control", @type="password"})
        </div>
    </form>
</div>
